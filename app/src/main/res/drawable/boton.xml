<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="100dp"
                />
            <solid
                android:color="@color/white"
                />
            <stroke
                android:width="2dp"
                android:color="#FF0000"
                />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"
                />
        </shape>
    </item>
</layer-list>